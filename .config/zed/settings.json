{
  "base_keymap": "VSCode",
  "vim_mode": true,
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "languages": {},

  // Font
  "ui_font_family": "JetBrains Mono",
  "buffer_font_family": "JetBrains Mono",
  "ui_font_size": 16,
  "buffer_font_size": 16,

  // UI theme
  "theme": {
    "mode": "system",
    "light": "Gruvbox Light Hard",
    "dark": "Gruvbox Dark Hard"
  },

  // UI panels
  "notification_panel": {
    "dock": "right"
  },
  "chat_panel": {
    "dock": "right"
  },
  "outline_panel": {
    "dock": "right"
  },
  "project_panel": {
    "dock": "left"
  },

  // UI Editor
  "relative_line_numbers": true,

  // AI
  "disable_ai": true
}
